<UserControl x:Name="_uc" x:Class="PlayListsParser.PgEditorFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayListsParser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#FF179AC8" BorderThickness="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            <TextBox BorderThickness="0" Grid.Column="0" Text="{Binding Value, ElementName=_uc}" IsReadOnly="True" />
            <Button Grid.Column="1" Click="Button_Click">...</Button>
        </Grid>
    </Border>
</UserControl>
